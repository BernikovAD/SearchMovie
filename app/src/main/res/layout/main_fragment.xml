<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container_main"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:gravity="center|top">

        <TextView
            android:id="@+id/tv_new_films"
            android:layout_width="wrap_content"
            android:text="@string/tv_new"
            style="@style/text_style_fragment_navigation"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_populete_films"
            android:layout_width="wrap_content"
            android:text="@string/tv_popular"
            style="@style/text_style_fragment_navigation"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_films"
            android:text="@string/tv_films"
            android:layout_width="wrap_content"
            style="@style/text_style_fragment_navigation"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_serials"
            android:text="@string/tv_serials"
            android:layout_width="wrap_content"
            style="@style/text_style_fragment_navigation"
            android:layout_height="wrap_content" />


</LinearLayout>